<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.code.mybatisdomain.member.infra.MemberMapper">
  <select id="getMember" resultType="com.blog.code.mybatisdomain.member.application.dto.MemberDto">
    select id, username, email
    from members
    where id = ${memberId}
  </select>

  <insert id="createMember" parameterType="com.blog.code.mybatisdomain.member.application.dto.MemberDto">
    insert into members(username, email) values (#{username}, #{email})
  </insert>
</mapper>